<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>

<window xmlns:html="http://www.w3.org/1999/xhtml"
        xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        class="dialog"
        title="About Piigeon">

	<groupbox align="center" orient="horizontal">
	<vbox>
	<hbox>
	<vbox width="200px">
		<spacer style="height:15px"/>
		<description value="Version" style="font-weight:bold;"/>
		<hbox>
			<label value="1.2beta1d"/>
			<spacer flex="1"/>     	
		</hbox>
		
		<spacer style="height:15px"/>
		<description value="Project Page" style="font-weight:bold;"/>
		<hbox>
			<label value="http://piigeon.org/" class="text-link"
				href="http://piigeon.org/" onclick="openURL(event.target.getAttribute('href'));"/>
			<spacer flex="1"/>     	
		</hbox>

		<spacer style="height:15px"/>
		<description value="Other Information" style="font-weight:bold;"/>
		<vbox>
			<label value="Privacy Policy" class="text-link"
				href="http://piigeon.org/privacy.html" onclick="openURL(event.target.getAttribute('href'));"/>
			<spacer flex="1"/>     	
			<label value="User Manual" class="text-link"
				href="http://piigeon.org/faq.html" onclick="openURL(event.target.getAttribute('href'));"/>
			<spacer flex="1"/>     	 	
			<label value="Send Us Feedback" class="text-link"
				href="https://www.secure.piigeon.org/forum/index.php" onclick="openURL(event.target.getAttribute('href'));"/>
			<spacer flex="1"/>     	 	
		</vbox>
	</vbox>
	<vbox width="200px">
		<spacer style="height:15px"/>
		<description value="Contributors" style="font-weight: bold;"/>
		<vbox>
			<label value="Xiao (Sophia) Wang" class="text-link"
				href="http://www.cs.washington.edu/homes/wangxiao/" onclick="openURL(event.target.getAttribute('href'));"/>
			<spacer flex="1"/>     	
			<label value="David Choffnes" class="text-link"
				href="http://www.david.choffnes.com/" onclick="openURL(event.target.getAttribute('href'));"/>
			<spacer flex="1"/>     	
			<label value="Patrick Gage Kelley" class="text-link"
				href="http://www.cs.cmu.edu/~pkelley/" onclick="openURL(event.target.getAttribute('href'));"/>
			<spacer flex="1"/>     	
			<label value="Ben Greenstein" class="text-link"
				href="http://www.bengreenstein.org/" onclick="openURL(event.target.getAttribute('href'));"/>
			<spacer flex="1"/>     	
			<label value="David Wetherall" class="text-link"
				href="http://www.cs.washington.edu/homes/djw/" onclick="openURL(event.target.getAttribute('href'));"/>
			<spacer flex="1"/>     	
		</vbox>
	</vbox>
	</hbox>
	</vbox>
	</groupbox>

	<box align="right" pack="center" flex="1">
		<button label="Close" oncommand="window.close();"/>
	</box>
</window>
<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>

<?xml-stylesheet href="chrome://piigeon/content/privacy.css"?>

<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://global/skin/passwordmgr.css" type="text/css"?>

<!DOCTYPE dialog SYSTEM "chrome://passwordmgr/locale/passwordManager.dtd">

<prefwindow xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
 xmlns:html="http://www.w3.org/1999/xhtml"
 id="dialog_Configuration"
 onload="window.focus();"
 ondialogaccept="OK();">
 
    <prefpane onpaneload="init();">
    	<script type="application/x-javascript" src="chrome://piigeon/content/Options.js"/>
    	<script type="application/x-javascript" src="chrome://piigeon/content/privacy-prefs.js"/>
    	<script type="application/x-javascript" src="chrome://piigeon/content/privacy-utils.js"/>
    	<script type="application/x-javascript" src="chrome://piigeon/content/privacy-wireless.js"/>
    	<script type="application/x-javascript" src="chrome://piigeon/content/privacy-db.js"/>
    	
    <tabbox>
        <tabs>
            <tab label="Privacy Policy"/>
            <tab label="Input Monitor"/>
        </tabs>
        <tabpanels>
            <tabpanel>
                	<vbox>
	                	<vbox>
	                		<html:textarea rows="7" cols="50" readonly="readonly">Please help us to improve Piigeon and learn 
	                		about Web privacy in practice by opting in to report anonymous information about how Web sites protect 
	                		passwords. We do NOT collect information that can be used to identify you or link you to Web browsing 
	                		activities, as that would defeat our goal of protecting your privacy.</html:textarea>
	                		
	                		<label value="Click here for our detailed privacy policy" class="text-link" href="http://piigeon.org/privacy.html"/>
	                		
	                		<radiogroup>
  								<radio id="allow" label="Allow Piigeon to report anonymous information." selected="true" oncommand="selectServer();"/>
  								<radio id="notallow" label="Do not allow Piigeon to report anonymous information." oncommand="selectServer();"/>
							</radiogroup>
						</vbox>
                	</vbox>
            </tabpanel>
        	<tabpanel>
	             <checkbox id="monitor-0" label="Provide Piigeon with feedback for all form inputs." oncommand="inputMonitor();"/>
        	</tabpanel>
        </tabpanels>
    </tabbox>
    </prefpane>
</prefwindow>
